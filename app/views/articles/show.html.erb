<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @article.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @article.user.email %>
</p>

<% if current_user %>
  <%= link_to 'Edit', edit_article_path(@article) if current_user.roles.include?(:super_admin) || (current_user.roles.include?(:editor) && current_user == @article.user) %> |
<% end %>
<%= link_to 'Back', articles_path %>
